#include <bits/stdc++.h>
using namespace std;

int main() {
    int N;
    cin >> N;

    while (N--) {
        int X, Y;
        cin >> X >> Y;
        int sum = 0;

        int start = min(X, Y);
        int end = max(X, Y);

        for (int i = start + 1; i < end; i++) {
            if (i % 2 != 0) {
                sum += i;
            }
        }

        cout << sum << endl;
    }

    return 0;
}
