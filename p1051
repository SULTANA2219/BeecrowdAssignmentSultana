#include <bits/stdc++.h>
#include <iomanip>
using namespace std;

int main() {
    double salary, tax = 0.0;
    cin >> salary;

    if (salary <= 2000.0) {
        cout << "Isento" << endl;
    } else {
        if (salary > 2000.0) {
            tax += min(salary, 3000.0) - 2000.0;
            tax *= 0.08; 
        }

        if (salary > 3000.0) {
            tax += (min(salary, 4500.0) - 3000.0) * 0.18;
        }

        if (salary > 4500.0) {
            tax += (salary - 4500.0) * 0.28;
        }

        cout << fixed << setprecision(2);
        cout << "R$ " << tax << endl;
    }

    return 0;
}
